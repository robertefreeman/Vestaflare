# Cloudflare Workers Development Environment Variables
# Copy this file to .dev.vars and fill in your actual values
# For GitHub Actions/Secrets, use the syntax: ${VAR_NAME}

# Server Configuration
# PORT=${{ secrets.PORT }}
ENVIRONMENT=production

# MCP Server Configuration
MCP_SERVER_NAME=vestaflare
MCP_SERVER_VERSION=1.0.0
# Name of the HTTP header used to pass session IDs (not the session ID value itself)
MCP_SESSION_HEADER_NAME=mcp-session-id

# Vestaboard API Configuration
VESTABOARD_API_BASE_URL=${{ secrets.VESTABOARD_API_BASE_URL }}
VESTABOARD_READ_WRITE_KEY=${{ secrets.VESTABOARD_READ_WRITE_KEY }}
VESTABOARD_SUBSCRIPTION_ID=${{ secrets.VESTABOARD_SUBSCRIPTION_ID }}
VESTABOARD_API_KEY=${{ secrets.VESTABOARD_API_KEY }}
VESTABOARD_API_SECRET=${{ secrets.VESTABOARD_API_SECRET }}

# API Keys (add as needed)
# OPENAI_API_KEY=${{ secrets.OPENAI_API_KEY }}
# GOOGLE_API_KEY=${{ secrets.GOOGLE_API_KEY }}
# ANTHROPIC_API_KEY=${{ secrets.ANTHROPIC_API_KEY }}
# WEATHER_API_KEY=${{ secrets.WEATHER_API_KEY }}
# OTHER_API_KEY=${{ secrets.OTHER_API_KEY }}

# Database Configuration (if needed)
# DATABASE_URL=${{ secrets.DATABASE_URL }}
# REDIS_URL=${{ secrets.REDIS_URL }}

# External Service URLs (if needed)
# EXTERNAL_API_URL=${{ secrets.EXTERNAL_API_URL }}
# WEBHOOK_BASE_URL=${{ secrets.WEBHOOK_BASE_URL }}

# Feature Flags
# ENABLE_LOGGING=${{ secrets.ENABLE_LOGGING }}
# ENABLE_CORS=${{ secrets.ENABLE_CORS }}
# ENABLE_DEBUG_MODE=${{ secrets.ENABLE_DEBUG_MODE }}

# Security Configuration
# JWT_SECRET=${{ secrets.JWT_SECRET }}
# API_KEY_HEADER=${{ secrets.API_KEY_HEADER }}

# MCP Authentication Configuration
# Set to true to require API key authentication for MCP requests
MCP_AUTH_REQUIRED=true
# API key that clients must provide to access the MCP server
MCP_API_KEY=${{ secrets.MCP_API_KEY }}
# Header name to check for the API key (supports both Bearer token and direct key formats)
MCP_AUTH_HEADER_NAME=Authorization

# CORS Configuration
# CORS_ORIGIN=${{ secrets.CORS_ORIGIN }}
# CORS_METHODS=${{ secrets.CORS_METHODS }}
# CORS_HEADERS=${{ secrets.CORS_HEADERS }}

# Logging Configuration
# LOG_LEVEL=${{ secrets.LOG_LEVEL }}
# LOG_FORMAT=${{ secrets.LOG_FORMAT }}
# Debug settings
# DEBUG=${{ secrets.DEBUG }}
